import math


# Asking user for radius value



radius1 = input("What is the radius of circle 1? ")
radius2 = input("What is the radius of circle 2? ")
r1 = float(radius1)
r2 = float(radius2)
# Checking for invalid input
if r1 < 0 or r2 <0:
    print("Please input a valid value.")
            

else :
# Fromula for calculating the area of the circles
    area1 = (math.pi * (r1 ** 2))
    
    area2 = (math.pi * (r2 ** 2))         

# Fromula for calculating the circumference of the circles
    circumference1 = float(2 * math.pi * r1)
    
    circumference2 = float(2 * math.pi * r2)
# Rounding the answers to the 4th decimal, and turning the value into a string.

    a1 = str(round(area1, 4))
    c1 = str(round(circumference1,4))
    
    a2 = str(round(area2, 4))
    c2 = str(round(circumference2,4))

    
    
# Printing the area and circumference of the circles


    print ("\nThe area of circle 1 is " + a1 + ".\nThe circumference of circle 1 is "+ c1 + ".\n")
    print ("The area of circle 2 is " + a2 + ".\nThe circumference of circle 2 is "+ c2 + ".\n")            
    
    if area1 > area2:
        print ("Circle One is bigger!")
        
    elif area1 < area2:
        print ("Circle Two is bigger!")
    
    elif area1 == area2:
        print ("Both Circles are Even!")
